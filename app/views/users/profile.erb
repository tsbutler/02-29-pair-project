<div class="container">
  <h1><%= @user.username %></h1>
  <form action="/users/<%= @user.id %>/delete" method="post">
    <button type="submit" class="btn btn-sm btn-primary-outline">Delete User</button>
  </form>
  <br>
</div>
<div class="container">
  <% @user.get_airport_codes(@user.id).each do |code| %>
      <%= code %> -- <%= Destination.find_by_airport_code(code).name %><br>
      <br>
  <% end %> 
</div>
<div class="container">
  <form action="/users/<%= @user.id %>/process_search" method="get">
    <button type="button" class="btn btn-lg btn-pill btn-danger">
      <span class="icon icon-aircraft">
        GTFOmaha
      </span>  
    </button>
  </form>
</div>  
